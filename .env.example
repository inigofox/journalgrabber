# Journal Grabber Environment Configuration
# Copy this file to .env and customize as needed

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=production

# Database Configuration  
DATABASE_URL=sqlite:////app/data/journalgrabber.db

# Download Settings
DOWNLOAD_PATH=/app/downloads
MAX_DOWNLOAD_SIZE_MB=100

# ArXiv API Settings
ARXIV_API_DELAY=3.0
DEFAULT_MAX_RESULTS=50
DEFAULT_SEARCH_DAYS=30

# Scheduler Settings
MIN_FREQUENCY_HOURS=1
MAX_FREQUENCY_HOURS=168

# Zotero Integration (Optional)
# Get your API key from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=

# Your numeric Zotero User ID (not username!)
# You can find this in your Zotero profile URL: https://www.zotero.org/users/YOUR_USER_ID
# Or use the "Get User ID" button in the app's Profiles tab
ZOTERO_USER_ID=

# Optional: Group Library ID (leave empty to use personal library)
# Get this from the group URL: https://www.zotero.org/groups/GROUP_ID
ZOTERO_GROUP_ID=

# Security Settings
# MAX_CONTENT_LENGTH will be set based on MAX_DOWNLOAD_SIZE_MB
